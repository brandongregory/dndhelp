---
layout: layout.njk
article: true
---

<main class="container">
    <div role="navigation">
        <ol id="breadcrumbs">
            <li><a href="/">Home</a></li>
            {% if parent %}
            <li><a href="{{parent.url}}">{{ parent.name }}</a></li>
            {% endif %}
            {% if parent2 %}
            <li><a href="{{parent2.url}}">{{ parent2.name }}</a></li>
            {% endif %}
            <li>{{ meta_title }}</li>
        </ol>    
    </div>
    
    <h1>{{ meta_title }}</h1>
    <p class="author">by <a href="/authors/{{ author | slugify }}/">{{ author }}</a></p>
    
    {{ content | safe }}

    <div class="author-box">
        {%- for a in authors -%}
            {%- if a.name == author -%}
                <h2>About the Author</h2>
                <h3>{{ a.name }}</h3>
                <div class="bio-box">
                    <img src="{{ a.photo }}" class="author-bio" alt="Photo of {{ a.name }}">
                    <p>{{ a.bio }}</p>    
                </div>
            {%- endif -%}
        {%- endfor -%}
    </div>

</main>

{% set siblings = collections[section_name] | randomSiblings(page.fileSlug) %}
<aside class="container">
    <h2>Related posts</h2>
    <ul>
        {%- for post in siblings -%}
        <li>
            <h3><a href="{{ post.url }}">{{ post.data.meta_title }}</a></h3>
            <p class="description">{{post.data.meta_description}}</p>
            <p class="link"><a href="{{ post.url }}">Read Now &raquo;</a></p>
        </li>
        {%- endfor -%}
    </ul>
</aside>
