---
layout: layout.njk
toc: true
---

<main class="container">
    <div role="navigation">
        <ol id="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li>{{ meta_title }}</li>
        </ol>    
    </div>
    
    <h1>{{ meta_title }}</h1>

    {{ content | safe }}

    {% set pages = collections[section_name] | sortCollection() %}
    <ul>
        {%- for post in pages -%}
        <li>
            <a href="{{ post.url }}">{{ post.data.meta_title }}</a> &ndash; {{ post.data.meta_description }}
        </li>
        {%- endfor -%}
    </ul>
</main>
