---
layout: layout.njk
---

<main class="container">
    <ol id="breadcrumbs" role="navigation">
        <li><a href="/">Home</a></li>
        <li>{{ meta_title }}</li>
    </ol>
    
    <h1>{{ meta_title }}</h1>

    {{ content | safe }}

    {% set pages = collections[section_name] %}
    <ul>
        {%- for post in pages -%}
        <li>
            <a href="{{ post.url }}">{{ post.data.meta_title }}</a> &ndash; {{ post.data.meta_description }}
        </li>
        {%- endfor -%}
    </ul>
</main>
