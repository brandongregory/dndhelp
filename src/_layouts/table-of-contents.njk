---
layout: layout.njk
toc: true
---

<main class="container">
    <div role="navigation">
        <ol id="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li>{{ meta_title }}</li>
        </ol>    
    </div>
    
    <h1>{{ meta_title }}</h1>

    {{ content | safe }}

    <div class="article-list container">
        {% set pages = collections[section_name] | sortCollection() %}
        <ul>
            {%- for post in pages -%}
            <li>
                {%- if post.data.posterImage -%}
                <a href="{{ post.url }}"><img
                    src="/images/{{ post.data.posterImage }}-426.webp"
                    alt="{{ post.data.posterDescription }}"
                    class="aside-poster"
                    height="120" width="213"
                    loading="lazy" /></a>
                {%- endif -%}
                <h3><a href="{{ post.url }}">{{ post.data.meta_title }}</a></h3>
                <p class="description">{{post.data.meta_description}}</p>
                <p class="link"><a href="{{ post.url }}">Read Now &raquo;</a></p>
            </li>
            {%- endfor -%}
        </ul>
    </div>
</main>
